      PARAMETER (MZCHF=  1115)    ! NUMBER OF SCATTERING CHANNELS 60/150 (NCHAN)
      PARAMETER (MZCHD=  1115)    ! =CHF FOR CC AND  =1 FOR DW
      PARAMETER (MZCHL=    60)    ! NUMBER OF CHANNELS IN LS COUPLING
      PARAMETER (MZFAC=    60)    ! LARGEST FACTORIAL
      PARAMETER (MZIPH=     2)    ! =1 FOR ELECTRON EXCITATION =2 FOR PHOTOIONIZATION
      PARAMETER (MZKIL=   100)    ! KILO-WORDS OF MEMORY FOR INTERNAL STORAGE (REDUCES I/O)
      PARAMETER (MZLMX=     2)    ! NUMBER OF LONG RANGE MULTIPOLES (LAMAX)
      PARAMETER (MZLR1=     5)    ! HIGHEST L+1 FOR BOUND ORBITALS (LRANG1)  **STGLIB**
      PARAMETER (MZLR2=    87)    ! HIGHEST L+1 FOR CONTINUUM ORBITALS (LRANG2)  **STGLIB**
      PARAMETER (MZMEG=     2)    ! MEGA-WORDS OF MEMORY FOR INTERNAL STORAGE (REDUCES I/O)
      PARAMETER (MZNC1=    50)    ! TARGET CONFIGURATIONS FOR GIVEN S L PI
      PARAMETER (MZNC2=  3000)    ! N+1 CONFIGURATIONS FOR GIVEN S L PI  **STGLIB**
      PARAMETER (MZNPT=  7500)    ! RADIAL TABULAR POINTS
      PARAMETER (MZNR1=    20)    ! HIGHEST N FOR BOUND ORBITALS  **STGLIB**
      PARAMETER (MZNR2=    30)    ! NUMBER OF CONTINUUM ORBITALS FOR GIVEN L (NRANG2)
      PARAMETER (MZOCC=    20)    ! OCCUPIED SHELLS IN A GIVEN CONFIGURATION  **STGLIB**
      PARAMETER (MZOVL=    10)    ! NUMBER OF VALENCE ORBITALS - DW ONLY
      PARAMETER (MZSLP=   200)    ! NUMBER OF DIFFERENT SYMMETRIES S L PI/J PI (INAST)
      PARAMETER (MZTAR=   350)    ! NUMBER OF TARGET TERMS/LEVELS (NAST)
